<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-49dp">

        <Button
            android:id="@+id/toSearchField"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:layout_gravity="center"
            android:background="@drawable/button_gradient"
            android:gravity="center"
            android:onClick="onToSearchButtonClick"
            android:text="Course Search" />

        <Button
            android:id="@+id/toAddCommentField"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="70dp"
            android:layout_gravity="center"
            android:background="@drawable/button_gradient"
            android:gravity="center"
            android:onClick="onAddCommentButtonClick"
            android:text="Add Comment" />

        <Button
            android:id="@+id/viewAllComments"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="70dp"
            android:layout_gravity="center"
            android:background="@drawable/button_gradient"
            android:gravity="center"
            android:onClick="onViewCommentButtonClick"
            android:text="View My Comments" />

        <Button
            android:id="@+id/toMyProfileField"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_gradient"
            android:gravity="center"
            android:onClick="onToMyProfileButtonClick"
            android:text="My profile" />

        <Button
            android:id="@+id/toLogout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@drawable/button_gradient"
            android:gravity="center"
            android:onClick="onLogoutButtonClick"
            android:text="@string/to_log_out" />

        <TextView
            android:id="@+id/statusField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="30sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>