<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/toSearchField"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Course Search"
            android:gravity="center"
            android:onClick="onToSearchButtonClick" />

        <Button
            android:id="@+id/toAddCommentField"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Add Comment"
            android:gravity="center"
            android:onClick="onToAddCommentButtonClick"/>

        <Button
            android:id="@+id/toMyProfileField"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/rounded_rectangle"
            android:text="My profile"
            android:gravity="center"
            android:onClick="onToMyProfileButtonClick"/>

        <TextView
            android:id="@+id/statusField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:text="" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>